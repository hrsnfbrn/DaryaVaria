@page
@model DaryaVaria.Web.Pages.BuatLaporanModel

@{
    ViewData["Title"] = "BuatLaporan";
}

<h1>Buat Laporan Produk</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LaporanProduk.UserId" value="@ViewBag.UserId" />
            <div class="form-group">
                <label asp-for="LaporanProduk.NamaProduk" class="control-label"></label>
                <input asp-for="LaporanProduk.NamaProduk" class="form-control" />
                <span asp-validation-for="LaporanProduk.NamaProduk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaporanProduk.TanggalProduksi" class="control-label"></label>
                <input asp-for="LaporanProduk.TanggalProduksi" class="form-control" />
                <span asp-validation-for="LaporanProduk.TanggalProduksi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaporanProduk.TanggalKadaluarsa" class="control-label"></label>
                <input asp-for="LaporanProduk.TanggalKadaluarsa" class="form-control" />
                <span asp-validation-for="LaporanProduk.TanggalKadaluarsa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaporanProduk.TanggalKonsumsi" class="control-label"></label>
                <input asp-for="LaporanProduk.TanggalKonsumsi" class="form-control" />
                <span asp-validation-for="LaporanProduk.TanggalKonsumsi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LaporanProduk.CaraPemakaian" class="control-label"></label>
                <input asp-for="LaporanProduk.CaraPemakaian" class="form-control" />
                <span asp-validation-for="LaporanProduk.CaraPemakaian" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="LaporanProduk.UserId" class="control-label"></label>
                <select asp-for="LaporanProduk.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Buat Laporan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/LaporanProduk">Kembali ke Tabel Laporan Produk</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
